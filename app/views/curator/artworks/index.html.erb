<%= render "header" %>

<% 
  items_per_column = @artworks.length / 2 #@artworks.length == 25 ? 6 : (@artworks.length / 4.0).ceil # TODO: calculate reminder for more even columns
%>
<div class="flex justify-center">
  <% if@artworks.length == 0 and @has_filters %>
      <div class="flex flex-col items-center pt-4">
        <div class="mb-4">No artworks matches your criteria.</div>
        <%= link_to curator_artworks_path, class: "tw-btn-primary" do %>
        Clear all filters
        <% end %>
      </div>
  <% end %>
  <div class="grid grid-cols-1 md:grid-cols-2 gap-6 md:gap-12 ">
      <% @artworks.each_with_index do |artwork, index| %>
          <div class="grid gap-4 content-baseline">
            <%= render artwork %>
          </div>

      <% end %>
  </div>
</div>
</div>

<div class="flex w-full justify-center">
  <%= paginate @artworks %>
</div>