<div id="<%= dom_id profile %>" class="lg:grid lg:auto-rows-min lg:grid-cols-12 lg:gap-x-8">
  <div class="bg-slate-100 mt-8 p-6 lg:min-h-vh rounded-lg flex flex-1 gap-y-4 flex-col lg:col-span-4 lg:col-start-1 lg:row-span-3 lg:row-start-1 lg:mt-0">
  <% if profile.avatar.attached? %>
  <div class="w-full sm:w-auto my-2">
      <%= image_tag profile.avatar %>
  </div>
  <% end %>
  <h3 class="text-xl text-slate-800"><%=profile.user.name %></h3>
  <% if profile.tags.length > 0 %>
    <h5 class="text-sm font-semibold">Disciplines:</h5>
    <div class="flex flex-wrap">
    <% profile.tags.each do | tag | %>
      <span class="text-sm w-1/2"><%= tag.name %></span>
    <% end %>
    </div>
  <% end %>
  <% if profile.bio %>
    <div class="my-3 ">
      <h5 class="text-sm font-semibold">Bio:</h5>
      <%= profile.bio.nil? ? '' : profile.bio  %>
    </div>

  <% end %>
  <div class="flex gap-6">
  
    <a href="mailto:<%= profile.email %>"  rel="noreferrer" target="_blank"
      class="<%= profile.email.blank? ? "text-gray-400 cursor-default pointer-events-none" : "text-black cursor-pointer"%>">
