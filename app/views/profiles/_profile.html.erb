    <a href="<%= profile.social_2 %>" rel="noreferrer" target="_blank"
      class="hidden <%= profile.social_2.blank? ? "text-gray-400 cursor-default pointer-events-none" : "text-black cursor-pointer"%>">
      <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="w-6" viewBox="0 0 16 16">
        <path d="M5.026 15c6.038 0 9.341-5.003 9.341-9.334q.002-.211-.006-.422A6.7 6.7 0 0 0 16 3.542a6.7 6.7 0 0 1-1.889.518 3.3 3.3 0 0 0 1.447-1.817 6.5 6.5 0 0 1-2.087.793A3.286 3.286 0 0 0 7.875 6.03a9.32 9.32 0 0 1-6.767-3.429 3.29 3.29 0 0 0 1.018 4.382A3.3 3.3 0 0 1 .64 6.575v.045a3.29 3.29 0 0 0 2.632 3.218 3.2 3.2 0 0 1-.865.115 3 3 0 0 1-.614-.057 3.28 3.28 0 0 0 3.067 2.277A6.6 6.6 0 0 1 .78 13.58a6 6 0 0 1-.78-.045A9.34 9.34 0 0 0 5.026 15"/>
      </svg> 
    </a>     
  </div>
  <% if profile.cv.attached? %>
  <div class="my-3">
    <a href="<%= profile.cv.url %>" target="_blank" class="block tw-btn-secondary text-center w-32">CV</a>
  </div>
  <% end %>
  <div class="mt-6">
    <% if profile.user.id === current_user.id || current_user.admin? %>
      <%= link_to(
        "edit profile",
        edit_profile_path(@profile),
        class: "tw-btn-secondary lg:mr-2"
      ) %>  
    <% end %>  
  </div>






  </div>
  <div class="lg:col-span-8">
    <ul role="list" class="pl-0 mt-6 lg:mt-0 grid grid-cols-1 gap-4 md:grid-cols-2">
      <% profile.user.artworks.is_visible.each do |artwork| %>
        <a href="<%= public_artwork_path(artwork.id) %>">
          <li class="col-span-1 flex flex-col divide-y text-center">
            <div class="flex flex-1 flex-col mb-4">
              <div class="mx-auto w-full flex-shrink-0 bg-slate-100 p-4" >
                <%= image_tag large_url_fix_h(artwork.images.first), class: "w-full"  %>
              </div>
              <h4 class="mt-2 text-left text-md text-gray-900 focus:no-underline"><%= artwork.title %></h4>

            </div>

          </li>
        </a>
      <% end %>


    </ul>
  </div>
 

</div>
